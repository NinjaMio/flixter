<br />

<div class="booyah-box col-10 offset-1 photo-center">
  <h1>Learn something today</h1>
  <hr />

  <% @courses.each do |course| %>
    <div class="row">
      <h2 class="col-12">
        <%= link_to course.title, course_path(course) %>
      </h2>
    </div>
    <br />
    <% if course.image.present? %>
      <%= image_tag course.image.url, class: 'img-fluid' %>
    <% end %>
    <div class="row">
      <div class="col-sm-8 col-12">
        <%= course.description %>
      </div>
      <div class="col-sm-4 col-12">
        <%= link_to 'More Details...', course_path(course), class: 'btn btn-primary btn-large' %>
      </div>
    </div>
    <br class="clr" />
  <% end %>
</div>